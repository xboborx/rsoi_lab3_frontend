<div class="container">
    <h1>Пожалуйста, залогиньтесь!</h1>

  <%= form_tag '/login', class: "form-horizontal" do %>
      <fieldset>
        <div class="form-group">
          <%= label_tag(:email, "E-mail", class: 'col-lg-2 control-label') %>
          <div class="col-lg-10">
            <%= email_field_tag(:email, "E-mail", class: 'form-control') %>
          </div>
        </div>

        <div class="form-group">
          <%= label_tag(:password, "Пароль", class: 'col-lg-2 control-label') %>
          <div class="col-lg-10">
            <%= password_field_tag(:password, "Пароль", class: 'form-control') %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= submit_tag("Вход", class: 'btn btn-primary') %>
          </div>
        </div>
      </fieldset>
  <% end %>

</div>